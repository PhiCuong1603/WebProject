@model List<LibraryManagement.Models.Book>
@{
    ViewData["Title"] = "Home Page";
}

<br />
<br />

<div class="row">
    @foreach (var book in Model)
    {
        <div class="col-4">
            <div class="card mb-4">
                <div class="card-header">

                    <h4 class="my-0 font-weight-normal">
                        <label style="font-size:23px;color:steelblue; border:1px thin gray ">@book.BookName</label>
                    </h4>
                </div>
                <img class="card-img-top" style="height:500px; border:1px thin gray; " src="@book.BookImage" alt="Card Image" />
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        @*<div class="btn-group">
                            <label style="font-size:20px; color:#a51313"> @book.Author.AuthorName </label>
                        </div>*@
                        <a asp-action="Details" asp-controller="Home" class="btn btn-success pull-right btn-outline-info" asp-route-id="@book.BookID"> View Details</a>
                    </div>
                </div>

            </div>
        </div>

    }
</div>

