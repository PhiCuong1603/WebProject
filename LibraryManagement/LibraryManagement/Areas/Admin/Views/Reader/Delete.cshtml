@model LibraryManagement.Models.Reader
@{
    ViewData["Title"] = "Delete";
}

<br />
<h2>Delete Reader</h2>

<form method="post" asp-action="Delete">
    <div class="p-4 border rounded">
        <div class="form-group row">
            <div class="col-2"></div>
            <div class="col-2">
                <label asp-for="ReaderName"></label>
            </div>
            <div class="col-5">
                <input asp-for="ReaderName" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2"></div>
            <div class="col-2">
                <label asp-for="Status"></label>
            </div>
            <div class="col-5">
                <input asp-for="Status" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2"></div>
            <div class="col-2">
                <label asp-for="Date"></label>
            </div>
            <div class="col-5">
                <input asp-for="Date" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2"></div>
            <div class="col-2">
                <label asp-for="Email"></label>
            </div>
            <div class="col-5">
                <input asp-for="Email" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2"></div>
            <div class="col-2">
                <label asp-for="Phone"></label>
            </div>
            <div class="col-5">
                <input asp-for="Phone" disabled class="form-control" />
            </div>
        </div>
        <br />
        <div style="text-align:center">
            <input type="submit" class="btn btn-danger" asp-route-id="@Model.ReaderID" value="Delete" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>