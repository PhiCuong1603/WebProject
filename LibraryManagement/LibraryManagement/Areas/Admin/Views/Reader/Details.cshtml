@model LibraryManagement.Models.Reader
@{
    ViewData["Title"] = "Details";
}

<br />
<h2>Reader Details</h2>

<div class="p-4 border rounded">
    <div class="form-group row">
        <div class="col-2"></div>
        <div class="col-2">
            <label asp-for="ReaderName"></label>
        </div>
        <div class="col-5">
            <input asp-for="ReaderName" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2"></div>
        <div class="col-2">
            <label asp-for="Status"></label>
        </div>
        <div class="col-5">
            <input asp-for="Status" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2"></div>
        <div class="col-2">
            <label asp-for="Date"></label>
        </div>
        <div class="col-5">
            <input asp-for="Date" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2"></div>
        <div class="col-2">
            <label asp-for="Email"></label>
        </div>
        <div class="col-5">
            <input asp-for="Email" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2"></div>
        <div class="col-2">
            <label asp-for="Phone"></label>
        </div>
        <div class="col-5">
            <input asp-for="Phone" disabled class="form-control" />
        </div>
    </div>

    <br />
    <div style="text-align:center">
        <a asp-action="Edit" asp-route-id="@Model.ReaderID" class="btn btn-primary">Edit</a>
        <a asp-action="Index" class="btn btn-success">Back to List</a>
    </div>
</div>
