@model IEnumerable<LibraryManagement.Models.Book>
@{
    ViewData["Title"] = "Index";
}

<br />
<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Book List</h2>

    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp; New Book</a>
    </div>
</div>

<br />
<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(m => m.BookName)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Author)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Category)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Note)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.BookImage)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => item.BookName)</td>
                <td>@Html.DisplayFor(m => item.Author.AuthorName)</td>
                <td>@Html.DisplayFor(m => item.Category.CategoryName)</td>
                <td>@Html.DisplayFor(m => item.PublicationDate)</td>
                <td>@Html.DisplayFor(m => item.Note)</td>
                <td>
                    <img src="@item.BookImage" width="100px style="border-radius: 5px; border: 1px solid #808080;" />
                </td>
                <td>
                    <partial name="_TableButtonPartial" model="item.BookID" />
                </td>

            </tr>
        }
    </table>
</div>
