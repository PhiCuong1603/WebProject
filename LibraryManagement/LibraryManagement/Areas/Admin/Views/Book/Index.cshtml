
@model IEnumerable<LibraryManagement.Models.Book>
@{
    ViewData["Title"] = "Index";
}
<head>
    <link rel="stylesheet" type="text/css" href="~/css/defaultt.css">
    <link rel="stylesheet" type="text/css" href="~/css/BookSheet.css">
    <style>

        #myBtn {
            display: none;
            position: fixed;
            bottom: 20px;
            right: 30px;
            z-index: 99;
            font-size: 18px;
            border: none;
            outline: none;
            background-color: dodgerblue;
            color: white;
            cursor: pointer;
            padding: 15px;
            border-radius: 4px;
        }

            #myBtn:hover {
                background-color: #555;
            }
    </style>
</head>


<section class="section section--menu" id="Horatio">
    <div style="color:aliceblue;font-size:40px;margin-top:20px;">Library Management</div>
    <nav class="menu menu--horatio" style="color:aliceblue">
        <ul class="menu__list">
            <li class="menu__item"><a class="menu__link" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="menu__item  menu__item--current"><a class="menu__link" asp-area="Admin" asp-controller="Book" asp-action="Index">Book</a></li>
            <li class="menu__item"><a class="menu__link" asp-area="Admin" asp-controller="Author" asp-action="Index">Author</a></li>
            <li class="menu__item"><a class="menu__link" asp-area="Admin" asp-controller="Category" asp-action="Index">Category</a></li>
            <li class="menu__item"> <a class="menu__link" asp-area="Admin" asp-controller="Reader" asp-action="Index">Reader</a></li>
            <li class="menu__item"><a class="menu__link" asp-area="Admin" asp-controller="AdminUsers" asp-action="Index">AdminUsers</a></li>
            <li class="menu__item"><a class="menu__link" asp-area="Admin" asp-controller="Process" asp-action="Index">Process</a></li>
        </ul>
    </nav>

</section>

<div class="sticky">
    <a asp-action="Create"><img src="~/images/LibrarianImg/add-book-19-1110422.png" width="15%" /></a>

</div>

<div class="limiter">
    <div class="container-table100">
        <div class="wrap-table100">
            <div class="table">

                <div class="row header">
                    <div class="cell">
                        @Html.DisplayNameFor(m => m.BookName)
                    </div>
                    <div class="cell">
                        @Html.DisplayNameFor(m => m.Author)
                    </div>
                    <div class="cell">
                        @Html.DisplayNameFor(m => m.Category)
                    </div>
                    <div class="cell">
                        @Html.DisplayNameFor(m => m.PublicationDate)
                    </div>
                    <div class="cell">
                        @Html.DisplayNameFor(m => m.Note)
                    </div>
                    <div class="cell">
                        @Html.DisplayNameFor(m => m.BookImage)
                    </div>
                    <div class="cell">
                        Manipulation
                    </div>


                </div>

                @foreach (var item in Model)
                {
                    <div class="row">
                        <div class="cell" data-title="@Html.DisplayNameFor(m => m.BookName)">@Html.DisplayFor(m => item.BookName)</div>
                        <div class="cell" data-title=" @Html.DisplayNameFor(m => m.Author)">@Html.DisplayFor(m => item.Author.AuthorName)</div>
                        <div class="cell" data-title="@Html.DisplayNameFor(m => m.Category)">@Html.DisplayFor(m => item.Category.CategoryName)</div>
                        <div class="cell" data-title=" @Html.DisplayNameFor(m => m.PublicationDate)">@item.PublicationDate.ToString("dd/MM/yyyy")</div>
                        <div class="cell" data-title=" @Html.DisplayNameFor(m => m.Note)">@Html.DisplayFor(m => item.Note)</div>
                        <div class="cell" data-title="  @Html.DisplayNameFor(m => m.BookImage)"> <img src="@item.BookImage" width=70% /></div>
                        <div class="cell" data-title="   Manipulation"> <partial name="_TableButtonPartial" model="item.BookID" /></div>

                    </div>
                }

            </div>
        </div>
    </div>

</div>

<button onclick="topFunction()" id="myBtn" title="Go to top">&nbsp;&nbsp;<i class="fas fa-angle-double-up">&nbsp;&nbsp;</i></button>

<script>
    //Get the button
    var mybutton = document.getElementById("myBtn");

    // When the user scrolls down 20px from the top of the document, show the button
    window.onscroll = function () { scrollFunction() };

    function scrollFunction() {
        if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
            mybutton.style.display = "block";
        } else {
            mybutton.style.display = "none";
        }
    }

    // When the user clicks on the button, scroll to the top of the document
    function topFunction() {
        document.body.scrollTop = 0;
        document.documentElement.scrollTop = 0;
    }
</script>


