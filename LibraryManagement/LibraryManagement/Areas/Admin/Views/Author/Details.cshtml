@model LibraryManagement.Models.Author
@{
    ViewData["Title"] = "Detail";
}

<br />
<h2 class="text-info">Author Detail</h2>
<div class="p-4 border rounded">
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="AuthorName"></label>
        </div>
        <div class="col-5">
            <input asp-for="AuthorName" disabled class="form-control" />

        </div>

    </div>

    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Note"></label>
        </div>
        <div class="col-5">
            <input asp-for="Note" disabled class="form-control" />

        </div>

    </div>
    <br />
    <div class="form-group">
        <a asp-action="Edit" asp-route-id="@Model.AuthorID" class="btn btn-primary">Edit</a>
        <a asp-action="Index" class="btn btn-success">Back to List</a>
    </div>
</div>

