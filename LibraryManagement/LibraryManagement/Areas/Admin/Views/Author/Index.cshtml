@model IEnumerable<LibraryManagement.Models.Author>
@{
    ViewData["Title"] = "Index";
}

<br />
<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Author List</h2>

    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp; New Author</a>
    </div>
</div>

<br />
<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(m => m.AuthorName)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Note)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
    <tr>
        <td>@Html.DisplayFor(m => item.AuthorName)</td>
        <td>@Html.DisplayFor(m => item.Note)</td>
        <td>
            <partial name="_TableButtonPartial" model="item.AuthorID" />
        </td>

    </tr>
        }
    </table>
</div>
