@model LibraryManagement.Models.Author
@{
    ViewData["Title"] = "Edit";
}

<br />
<h2 class="text-info">Edit Author</h2>
<form method="post" asp-action="Edit">
    <input type="hidden" asp-for="AuthorID" />
    <div class="p-4 border rounded">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="AuthorName"></label>
            </div>
            <div class="col-5">
                <input asp-for="AuthorName" class="form-control" />

            </div>
            <span asp-validation-for="AuthorName" class="text-danger"></span>

        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Note"></label>
            </div>
            <div class="col-5">
                <input asp-for="Note" class="form-control" />

            </div>
            <span asp-validation-for="Note" class="text-danger"></span>

        </div>
        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-primary" asp-route-id="@Model.AuthorID" value="Update" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>
